<div class="d-flex p-3 m-3 flex-column align-items-start card-review">
  <div class="d-flex flex-row align-items-center">
    <img src="https://geeko.lesoir.be/wp-content/uploads/sites/58/2020/05/avatar.jpg" class="avatar ml-0 mb-3 mt-3 mr-3">
    <div class="d-flex flex-column justify-content-between">
    <h3><%= review.reservation.user.first_name %> <%= review.reservation.user.last_name.first %>.</h4>
    <p><%= review.reservation.start_time.strftime("%-d %B %Y") %><p>
    </div>
    <div class="m-3">
    <%= render 'reviews/rating', rating: review.rating %>
    </div>
  </div>
  <div>
  <p class="text-left"><%= review.content %></p>
  </div>
</div>